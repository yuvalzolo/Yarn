@model yarn_rider.Models.Review

@{
    ViewBag.Title = ViewBag.Message + " (edit mode)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-between">
    <div class="col">
        <h3>@ViewBag.Title</h3>
    </div>

    <a href="@Url.Action("Index", "Review")">
        <div class="btn btn-grey col text-right">
            <i class="fas fa-arrow-left pr-2"></i>Back
        </div>
    </a>

</div>

<hr/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    
    @Html.HiddenFor(model => model.ReviewID)
    @Html.HiddenFor(model => model.Date)
    @Html.Hidden("MovieID", Model.Movie.MovieID)

    <div class="row">

        <div class="form-group col-xs-12 col-md-10">
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
        </div>

        <div class="form-group col-xs-12 col-md-2">
            @Html.LabelFor(model => model.Rating)
            @Html.EditorFor(model => model.Rating, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.Rating, "", new {@class = "text-danger"})
        </div>

    </div>
    
    <div class="row">
    
    <div class="form-group col-xs-12 col-md-12">
        @Html.LabelFor(model => model.Content)
        @Html.EditorFor(model => model.Content, new {htmlAttributes = new {@class = "form-control"}})
        @Html.ValidationMessageFor(model => model.Content, "", new {@class = "text-danger"})
    </div>
    
    </div>

    <hr/>

    <div class="row justify-content-end">

        <div class="col">
            <input type="submit" value="Submit Changes" class="btn btn-admin"/>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}